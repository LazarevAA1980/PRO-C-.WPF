<Window x:Class="MainWpfApp.Views.Auth.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWpfApp.Views.Auth"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="340">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              FontSize="16"
              Content="Авторизация пользователя" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                   Width="120">
                </ColumnDefinition>
                <ColumnDefinition
                   Width="200">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label 
                   Content="Логин"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="120"/>
            <TextBox 
                   x:Name="Login_TextBox"
                   Grid.Column="1"
                   Margin="3"
                   Width="194"
                   FontSize="16"
                   HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                   Width="120">
                </ColumnDefinition>
                <ColumnDefinition
                   Width="200">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label 
                   Content="Пароль"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="120"/>
            <TextBox 
               x:Name="Password_TextBox"
               Grid.Column="2"
               Margin="3,3,3,3"
               Width="194"
               FontSize="16"
               HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="3">
            <CheckBox 
                x:Name="Remember_CheckBox"
                Content="Запомнить"
                      FontSize="11" HorizontalAlignment="Left" Width="159" Margin="7,7,0,7" VerticalAlignment="Center" IsChecked="False">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </CheckBox.LayoutTransform>
            </CheckBox>
        </Grid>
        <Button
           x:Name="Authorization_Button"
           Content="Войти"
           Grid.Row="4"
           Margin="10"
           FontSize="16"/>


    </Grid>
</Window>
