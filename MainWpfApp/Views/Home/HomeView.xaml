<UserControl x:Class="MainWpfApp.Views.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainWpfApp.Views.Home"
             xmlns:vm="clr-namespace:MainWpfApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:HomeViewViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <local:DayForecastDetailView DataContext="{Binding SelectedDay}"/>
            </Grid>
            <!--<Grid Grid.Row="0" Grid.Column="1">
                
            </Grid>-->
            <ListBox Grid.Row="0" Grid.Column="1" x:Name="HourlyForecast_ListBox" Grid.ColumnSpan="2"
                     ItemsSource="{Binding SelectedDay.HourlyForecasts}">
                    <ListBox.ItemsPanel >
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Label Content="{Binding Path=Time}"/>
                                <Label Content="{Binding Path=ApparentTemperature}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
       
            <ListBox Grid.Row="1" x:Name="WeatherDays_ListBox" Grid.ColumnSpan="2"
                     ItemsSource="{Binding ForecastDays}"
                     SelectedItem="{Binding SelectedDay}">
                <ListBox.ItemsPanel >
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Label Content="{Binding Path=Date}"/>
                            <Label Content="{Binding Path=WeekDay}"/>
                            <Label Content="{Binding Path=MaxTemperature}"/>
                            <Label Content="{Binding Path=MinTemperature}"/>
                            <Label Content="{Binding Path=Weather}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
